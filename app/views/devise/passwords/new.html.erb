<%= stylesheet_link_tag "auth", :media => "all" %>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <h2 align="center">Forgot your password?</h2>
  <div class="container">
    <div class="user">
      <header class="user__header">
          <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
          <h1 class="user__title">Welcome to credibility check</h1>
      </header>
      <br>
      <form class="form">
          <div class="form__group">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control" } %>
          </div>

          <button class="btn" type="button"><%= f.button :submit, "Send me reset password instructions" %></button>
          <span style="display: inline-block;"></span>
          <%= render "devise/shared/links" %>
    </form>
  </div>
</div>
<% end %>
