    <body>
    <style>
      #rcorner {
        border-radius: 25px;
        background: #A5CAD2;
        padding: 20px;
        width: 650px;
        height: 550px;
        margin-left: auto;
        margin-right: auto;
        width: fit-content;
        height: fit-content;
      }

      #rcorner2 {
        border-radius: 25px;
        background: #E1F5C4;
        padding: 20px;
        width: 550px;
        height: 420px;
        margin-left: auto;
        margin-right: auto;
      }

      .Box {
        white-space: nowrap;
        border-top-left-radius:25px;
        border-top-right-radius:25px;
        border-bottom: 2px solid;
        margin:-20px;
        width:auto;
        height: 85px;
      }

      .kard {
        margin: auto;
        width: 500px;
        height: fit-content;
        padding: 20px;
        border-radius: 25px;
      }

      .kard-body {
        margin: auto;
        width: fit-content;
        height: fit-content;
        padding: 15px;
      }

      .center {
        margin-right:auto;
        width: 50%;
        padding: 10px;
      }

      .divider {
        width:5px;
        height:auto;
        display: inline-block;
      }

      #butt {
        padding: 15px 30px;
        border-radius: 12px;
        background: #9DE0AD;
      }

      span {
        display:block;
      }

      .footer-bottom {
        *magin:auto;
        width:100%;
        height:150px;
        background: #355C7D;
        bottom: 0;
        position: absolute;
      }

      .btn {
          display: block;
          width: 100%;
          padding: 5px;
          font-family: $font-family;
          -webkit-appearance: none;
          outline: 0;
          border: 0;
          color: white;
          background: $color-primary;
          transition: 0.3s;

          &:hover {
              background: darken($color-primary, 5%);
          }
      }

      table {
      border: 1px solid #355C7D;
      border-collapse: separate;
      border-left: 0;
      border-radius: 4px;
      border-spacing: 0px;
      -webkit-user-select: none; /*cancel double click highlight*/
      -ms-user-select: none;
      -moz-user-select: none;
      }

      .heart {
        text-align:center;
        width: 100px;
        position: relative;
        height: 5em;
        align-items: center;
        bottom: -30px;
        left: 50%;
        transform: translate(-50%, -50%);
        background: url(https://cssanimation.rocks/images/posts/steps/heart.png) no-repeat;
        cursor: pointer;
        animation: fave-heart both;  /*freeze final state of animation*/
      }

      .emptyheart {
        text-align:center;
        width: 100px;
        position: relative;
        height: 5em;
        align-items: center;
        bottom: -30px;
        left: 50%;
        background: url(https://cssanimation.rocks/images/posts/steps/heart.png) no-repeat;
        transform: translate(-50%, -50%);
        cursor: pointer;
      }

      .heart:active{
        background-position: -2800px 0;
        animation: 0.2s steps(28) fave-heart;
      }

      @keyframes fave-heart {
        0% { background-position: 0 0; }
        100% { background-position: -2800px 0; }
      }

    </style>

    <script>
      function myFunction(x) {
        if(x.classList.item(0) == "heart" && x.classList.length == 1) {
          x.classList.add("emptyheart");
        }

        else if (x.classList.item(0) == "emptyheart" && x.classList.length == 1){
          x.classList.replace("emptyheart","heart");
        }

        else if (x.classList.length > 1) {
          //x.classList.remove("emptyheart");
          //x.classList.replace("heart","emptyheart");
          x.classList.toggle("heart");
        }
      }
    </script>

  </head>

