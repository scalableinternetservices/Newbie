      .heart {
        text-align:center;
        width: 100px;
        position: relative;
        height: 5em;
        align-items: center;
        bottom: -30px;
        left: 50%;
        transform: translate(-50%, -50%);
        background: url(https://cssanimation.rocks/images/posts/steps/heart.png) no-repeat;
        cursor: pointer;
        animation: fave-heart both;  /*freeze final state of animation*/
      }

      .emptyheart {
        text-align:center;
        width: 100px;
        position: relative;
        height: 5em;
        align-items: center;
        bottom: -30px;
        left: 50%;
        background: url(https://cssanimation.rocks/images/posts/steps/heart.png) no-repeat;
        transform: translate(-50%, -50%);
        cursor: pointer;
      }

      .heart:active{
        background-position: -2800px 0;
        animation: 0.2s steps(28) fave-heart;
      }

      @keyframes fave-heart {
        0% { background-position: 0 0; }
        100% { background-position: -2800px 0; }
      }

    </style>

    <script>
      function myFunction(x) {
        if(x.classList.item(0) == "heart" && x.classList.length == 1) {
          x.classList.add("emptyheart");
        }

        else if (x.classList.item(0) == "emptyheart" && x.classList.length == 1){
          x.classList.replace("emptyheart","heart");
        }

        else if (x.classList.length > 1) {
          //x.classList.remove("emptyheart");
          //x.classList.replace("heart","emptyheart");
          x.classList.toggle("heart");
        }
      }
    </script>

