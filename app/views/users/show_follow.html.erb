<% provide(:title, @title) %>
<div class="d-md-flex h-md-100 align-items-center">

<!-- First Half -->
<div class="col-sm-4 p-0 bg-indigo h-md-100 user-info">
    <div class="text-white d-md-flex align-items-center h-100 p-5 text-center justify-content-center panel widget light-widget panel-bd-top">
        <div class="logoarea pt-5 pb-5">
            <div class="profile">
                <section id="profile_info">
                    <div class="profile-image">
                    	<% if @user.avatar.attached? %>
                    		<img src="<%=(url_for(@user.avatar))%>" class="rounded-circle" style="width:140px;height:140px">
                    	<% else %>
                    	   <%= image_tag("user-icon.jp2", size:"140x140", class: "rounded-circle") %>
                    	<% end %>
                    </div>
                    <!-- End of profile-image -->

                    <div class="profile-user-settings">
                    	<h1 class="profile-user-name"><%= @user.user_name %></h1>
                            <span><%= link_to "view my profile", @user %></span>
                    </div>
                    <!-- End of profile-user-settings -->
                </section>
                <!-- End of profile_info section -->
                <section id="stats">
            	       <%= render 'users/shared/profile' %>
                </section>
                <!-- End of stats section -->
			</div>
        </div>
    </div>
</div>

<!-- Second Half -->

<div class="col-sm-8 p-0 h-md-100">
    <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
        <section class="show-follow">
	        <center><h1><%= @title %></h1></center>
            <% if @users.any? %>
            <% @users.each do |user| %>
                <ul style="font-size:13px">

                    <li>
                        <% if user.avatar.attached? %>
                            <img src="<%=(url_for(user.avatar))%>" class="rounded-circle" style="width:50px;height:50px">
                        <% else %>
                            <%= image_tag("user-icon.jp2", size:"50x50", class: "rounded-circle") %>
                    <% end %>
                        <%= link_to user.user_name, user_path(user.id) %>
                    </li>
                </ul>
            <% end %>
            <%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %>
            <% end %>
        </section>

    </div>
</div>
</div>
